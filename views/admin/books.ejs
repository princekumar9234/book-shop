<%- include('../partials/header') %>

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
    <h2>Manage Books</h2>
    <a href="/admin/books/add" class="btn btn-success"><i class="fas fa-plus"></i> Add New Book</a>
</div>

<div style="background: white; padding: 20px; border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,0.05); overflow-x: auto;">
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Price</th>
                <th>Category</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% books.forEach(book => { %>
                <tr>
                    <td><%= book.title %></td>
                    <td><%= book.author %></td>
                    <td>$<%= book.price %></td>
                    <td><%= book.category %></td>
                    <td><%= book.stock %></td>
                    <td>
                        <div style="display: flex; gap: 5px;">
                            <a href="/admin/books/edit/<%= book._id %>" class="btn btn-secondary" style="padding: 5px 10px; font-size: 0.8rem;"><i class="fas fa-edit"></i></a>
                            <form action="/admin/books/<%= book._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure?');">
                                <button type="submit" class="btn btn-danger" style="padding: 5px 10px; font-size: 0.8rem;"><i class="fas fa-trash"></i></button>
                            </form>
                        </div>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer') %>
