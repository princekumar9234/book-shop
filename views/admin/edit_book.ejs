<%- include('../partials/header') %>

<div class="form-container" style="max-width: 800px;">
    <h2 class="text-center mb-20">Edit Book</h2>
    <form action="/admin/books/<%= book._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" class="form-control" value="<%= book.title %>" required>
            </div>
            <div class="form-group">
                <label for="author">Author</label>
                <input type="text" id="author" name="author" class="form-control" value="<%= book.author %>" required>
            </div>
        </div>
        
        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" class="form-control" rows="4" required><%= book.description %></textarea>
        </div>
        
        <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 20px;">
            <div class="form-group">
                <label for="price">Price</label>
                <input type="number" id="price" name="price" step="0.01" class="form-control" value="<%= book.price %>" required>
            </div>
            <div class="form-group">
                <label for="stock">Stock</label>
                <input type="number" id="stock" name="stock" class="form-control" value="<%= book.stock %>" required>
            </div>
            <div class="form-group">
                <label for="category">Category</label>
                <input type="text" id="category" name="category" class="form-control" value="<%= book.category %>" required>
            </div>
        </div>
        
        <div class="form-group">
            <label for="image">Update Cover Photo (Optional)</label>
            <input type="file" id="image" name="image" class="form-control">
            <small style="color: #666;">Leave blank to keep current photo.</small>
        </div>
        
        <button type="submit" class="btn btn-primary" style="width: 100%;">Update Book</button>
    </form>
</div>

<%- include('../partials/footer') %>
