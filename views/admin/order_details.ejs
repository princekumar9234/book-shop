<%- include('../partials/header') %>

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
    <h2>Order Details</h2>
    <a href="/admin/orders" class="btn btn-secondary">Back to Orders</a>
</div>

<div style="display: flex; gap: 30px; flex-wrap: wrap;">
    <!-- Order Summary -->
    <div style="flex: 2; min-width: 300px;">
        <div style="background: white; padding: 25px; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.05); margin-bottom: 30px;">
            <h3 class="mb-20">Items in Order</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Book</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    <% order.items.forEach(item => { %>
                        <tr>
                            <td>
                                <strong><%= item.book ? item.book.title : 'Deleted Book' %></strong><br>
                                <small><%= item.book ? item.book.author : '' %></small>
                            </td>
                            <td>$<%= item.price.toFixed(2) %></td>
                            <td><%= item.quantity %></td>
                            <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <div style="text-align: right; margin-top: 20px; font-size: 1.2rem; font-weight: bold;">
                Total Amount: $<%= order.totalAmount.toFixed(2) %>
            </div>
        </div>
    </div>

    <!-- Order Status & Shipping -->
    <div style="flex: 1; min-width: 300px;">
        <div style="background: white; padding: 25px; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.05); margin-bottom: 30px;">
            <h3 class="mb-20">Actions</h3>
            <form action="/admin/orders/<%= order._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Update Order Status</label>
                    <select name="status" class="form-control" style="margin-bottom: 15px;">
                        <% ['Pending', 'Processing', 'Shipped', 'Delivered', 'Cancelled'].forEach(status => { %>
                            <option value="<%= status %>" <%= order.status === status ? 'selected' : '' %>><%= status %></option>
                        <% }) %>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary" style="width: 100%; margin-bottom: 10px;">Update Status</button>
            </form>
            
            <% if (order.status === 'Pending') { %>
                <form action="/admin/orders/<%= order._id %>?_method=PUT" method="POST">
                    <input type="hidden" name="status" value="Processing">
                    <button type="submit" class="btn btn-success" style="width: 100%;">Confirm Order</button>
                </form>
            <% } %>
            
            <div style="margin-top: 15px; font-size: 0.8rem; color: #666; text-align: center;">
                <i class="fas fa-sms"></i> Updating status will notify customer via SMS.
            </div>
        </div>

        <div style="background: white; padding: 25px; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.05);">
            <h3 class="mb-20">Customer Info</h3>
            <p><strong>Name:</strong> <%= order.user ? order.user.name : 'Unknown' %></p>
            <p><strong>Email:</strong> <%= order.user ? order.user.email : 'N/A' %></p>
            <hr style="margin: 15px 0; border: 0; border-top: 1px solid #eee;">
            <p><strong>Shipping Address:</strong></p>
            <p style="background: #f8f9fa; padding: 10px; border-radius: 4px; margin-top: 10px;"><%= order.shippingAddress %></p>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
