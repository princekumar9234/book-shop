<%- include('../partials/header') %>

<div class="container">
    <div style="margin-bottom: 3rem;">
        <h1>Browse Jobs</h1>
        <p style="color: var(--text-muted);">Find the perfect role from our curated list.</p>
    </div>

    <form action="/jobs" method="GET" class="search-container glass" style="margin-bottom: 3rem;">
        <div style="flex: 1; position: relative;">
            <i class="fas fa-map-marker-alt" style="position: absolute; left: 15px; top: 50%; transform: translateY(-50%); color: var(--text-muted);"></i>
            <input type="text" name="location" class="search-input" placeholder="Location" style="padding-left: 40px; border-right: 1px solid #e2e8f0; border-radius: 0; width: 100%;">
        </div>
        <div style="flex: 1; position: relative;">
            <i class="fas fa-briefcase" style="position: absolute; left: 15px; top: 50%; transform: translateY(-50%); color: var(--text-muted);"></i>
            <select name="category" class="search-input" style="padding-left: 40px; border: none; background: white; width: 100%;">
                <option value="">All Categories</option>
                <option value="Technology">Technology</option>
                <option value="Marketing">Marketing</option>
                <option value="Finance">Finance</option>
                <option value="Design">Design</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Filter</button>
    </form>

    <div class="jobs-grid">
        <% if (jobs && jobs.length > 0) { %>
            <% jobs.forEach(job => { %>
                <div class="job-card glass">
                    <span class="company"><%= job.company %></span>
                    <h3><%= job.title %></h3>
                    <div class="meta">
                        <span><i class="fas fa-map-marker-alt"></i> <%= job.location %></span>
                        <span><i class="fas fa-clock"></i> <%= job.type %></span>
                    </div>
                    <div class="tags">
                        <span class="tag"><%= job.category %></span>
                        <span class="tag"><%= job.salary %></span>
                    </div>
                    <a href="/jobs/<%= job._id %>" class="btn btn-outline" style="margin-top: 1.5rem; text-align: center;">View Details</a>
                </div>
            <% }) %>
        <% } else { %>
            <div style="grid-column: 1/-1; text-align: center; padding: 4rem;">
                <i class="fas fa-search" style="font-size: 3rem; color: #e2e8f0; margin-bottom: 1rem;"></i>
                <p>No jobs found matching your criteria.</p>
                <a href="/jobs" style="color: var(--primary-color);">Clear filters</a>
            </div>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>
