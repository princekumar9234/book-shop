<%- include('../partials/header') %>

<div class="container">
    <div class="auth-form glass">
        <h2 style="text-align: center; margin-bottom: 2rem;">Sign In</h2>
        
        <% if (locals.error) { %>
            <div class="error-msg"><%= error %></div>
        <% } %>

        <form action="/auth/login" method="POST">
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" name="email" id="email" class="input-field" required placeholder="name@company.com">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="input-field" required placeholder="••••••••">
            </div>
            <button type="submit" class="btn btn-primary" style="width: 100%; padding: 0.8rem;">Login</button>
        </form>
        
        <p style="text-align: center; margin-top: 1.5rem; color: var(--text-muted);">
            Don't have an account? <a href="/auth/register" style="color: var(--primary-color);">Create one</a>
        </p>
    </div>
</div>

<%- include('../partials/footer') %>
