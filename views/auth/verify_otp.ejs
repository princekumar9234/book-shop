<%- include('../partials/header') %>

<div class="form-container" style="max-width: 400px; margin: 50px auto;">
    <h2 class="text-center mb-20">Verify OTP</h2>
    
    <% if (locals.error_msg) { %>
        <div class="alert alert-danger" style="background: #f8d7da; color: #721c24; padding: 10px; border-radius: 4px; margin-bottom: 20px;">
            <%= error_msg %>
        </div>
    <% } %>

    <p style="color: #666; margin-bottom: 20px; text-align: center;">Please enter the 6-digit code sent to your email.</p>

    <form action="/auth/verify-otp" method="POST">
        <input type="hidden" name="email" value="<%= email %>">
        <div class="form-group">
            <label for="otp">Enter 6-Digit OTP</label>
            <input type="text" id="otp" name="otp" class="form-control" required maxlength="6" pattern="\d{6}" placeholder="123456" style="letter-spacing: 5px; text-align: center; font-size: 1.5rem;">
        </div>
        <button type="submit" class="btn btn-primary" style="width: 100%;">Verify OTP</button>
    </form>
    
    <p class="mt-20 text-center">
        <a href="/auth/forgot-password" style="color: #666; font-size: 0.9rem;">Resend Code</a>
    </p>
</div>

<%- include('../partials/footer') %>
