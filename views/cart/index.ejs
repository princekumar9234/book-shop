<%- include('../partials/header') %>

<h2 class="mb-20">Your Shopping Cart</h2>

<% if (cart && cart.items.length > 0) { %>
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% cart.items.forEach(item => { %>
                <tr>
                    <td>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <img src="<%= item.book.image %>" alt="<%= item.book.title %>" style="width: 50px; height: 75px; object-fit: cover;">
                            <div>
                                <strong><%= item.book.title %></strong><br>
                                <small><%= item.book.author %></small>
                            </div>
                        </div>
                    </td>
                    <td>$<%= item.book.price.toFixed(2) %></td>
                    <td>
                        <form action="/cart/update" method="POST" style="display: flex; gap: 5px;">
                            <input type="hidden" name="itemId" value="<%= item.book._id %>">
                            <input type="number" name="quantity" value="<%= item.quantity %>" min="1" style="width: 60px; padding: 5px;">
                            <button type="submit" class="btn btn-secondary" style="padding: 5px 10px; font-size: 0.8rem;">Update</button>
                        </form>
                    </td>
                    <td>$<%= (item.quantity * item.book.price).toFixed(2) %></td>
                    <td>
                        <form action="/cart/remove" method="POST">
                            <input type="hidden" name="itemId" value="<%= item.book._id %>">
                            <button type="submit" class="btn btn-danger" style="padding: 5px 10px; font-size: 0.8rem;"><i class="fas fa-trash"></i></button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    
    <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 30px; background: white; padding: 20px; border-radius: 8px;">
        <h3>Total: $<%= total.toFixed(2) %></h3>
        <a href="/orders/checkout" class="btn btn-primary">Proceed to Checkout</a>
    </div>
<% } else { %>
    <div class="text-center" style="padding: 50px; background: white; border-radius: 8px;">
        <p style="font-size: 1.2rem; margin-bottom: 20px;">Your cart is empty.</p>
        <a href="/books" class="btn btn-primary">Start Shopping</a>
    </div>
<% } %>

<%- include('../partials/footer') %>
