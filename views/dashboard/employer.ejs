<%- include('../partials/header') %>

<div class="container">
    <div class="dashboard-header">
        <h1>Employer Dashboard</h1>
        <a href="/jobs/create" class="btn btn-primary"><i class="fas fa-plus"></i> Post New Job</a>
    </div>

    <div class="dashboard-stats">
        <div class="stat-card glass">
            <h2><%= jobs.length %></h2>
            <p>Active Postings</p>
        </div>
        <div class="stat-card glass">
            <h2><%= jobs.reduce((acc, job) => acc + job.applicantCount, 0) %></h2>
            <p>Total Applicants</p>
        </div>
    </div>

    <div class="glass" style="padding: 2rem;">
        <h3 style="margin-bottom: 1.5rem;">Your Job Postings</h3>
        <% if (jobs && jobs.length > 0) { %>
            <div style="overflow-x: auto;">
                <table>
                    <thead>
                        <tr>
                            <th>Job Title</th>
                            <th>Status</th>
                            <th>Applicants</th>
                            <th>Date Posted</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% jobs.forEach(job => { %>
                            <tr>
                                <td><strong><%= job.title %></strong></td>
                                <td>
                                    <span class="tag <%= job.status === 'Open' ? 'tag-success' : 'tag-danger' %>">
                                        <%= job.status %>
                                    </span>
                                </td>
                                <td><a href="/applications/job/<%= job._id %>" style="color: var(--primary-color); font-weight: 600;"><%= job.applicantCount %> Applicants</a></td>
                                <td><%= job.createdAt.toDateString() %></td>
                                <td style="display: flex; gap: 1rem;">
                                    <a href="/jobs/<%= job._id %>/edit" title="Edit"><i class="fas fa-edit"></i></a>
                                    <form action="/jobs/<%= job._id %>/delete" method="POST" onsubmit="return confirm('Delete this job?')">
                                        <button type="submit" style="background: none; border: none; color: var(--danger); cursor: pointer;"><i class="fas fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p style="text-align: center; color: var(--text-muted); padding: 2rem;">You haven't posted any jobs yet.</p>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>
