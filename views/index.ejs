<%- include('partials/header') %>

<section class="hero">
    <h1>Find Your Next Big Opportunity</h1>
    <p>Discover thousands of job openings from world-class companies and take your career to the next level.</p>
    
    <form action="/jobs" method="GET" class="search-container glass">
        <div style="flex: 1; position: relative;">
            <i class="fas fa-map-marker-alt" style="position: absolute; left: 15px; top: 50%; transform: translateY(-50%); color: var(--text-muted);"></i>
            <input type="text" name="location" class="search-input" placeholder="Location (e.g. London)" style="padding-left: 40px; border-right: 1px solid #e2e8f0; border-radius: 0; width: 100%;">
        </div>
        <div style="flex: 1; position: relative;">
            <i class="fas fa-briefcase" style="position: absolute; left: 15px; top: 50%; transform: translateY(-50%); color: var(--text-muted);"></i>
            <select name="category" class="search-input" style="padding-left: 40px; border: none; background: white; width: 100%;">
                <option value="">All Categories</option>
                <option value="Technology">Technology</option>
                <option value="Marketing">Marketing</option>
                <option value="Finance">Finance</option>
                <option value="Design">Design</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Search Jobs</button>
    </form>
</section>

<div class="container">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <h2>Recently Posted Jobs</h2>
        <a href="/jobs" style="color: var(--primary-color); font-weight: 600;">View all jobs &rarr;</a>
    </div>

    <div class="jobs-grid">
        <% if (jobs && jobs.length > 0) { %>
            <% jobs.forEach(job => { %>
                <div class="job-card glass">
                    <span class="company"><%= job.company %></span>
                    <h3><%= job.title %></h3>
                    <div class="meta">
                        <span><i class="fas fa-map-marker-alt"></i> <%= job.location %></span>
                        <span><i class="fas fa-clock"></i> <%= job.type %></span>
                    </div>
                    <div class="tags">
                        <span class="tag"><%= job.category %></span>
                        <span class="tag"><%= job.salary %></span>
                    </div>
                    <a href="/jobs/<%= job._id %>" class="btn btn-outline" style="margin-top: 1.5rem; text-align: center;">View Details</a>
                </div>
            <% }) %>
        <% } else { %>
            <p>No jobs available at the moment.</p>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %>
